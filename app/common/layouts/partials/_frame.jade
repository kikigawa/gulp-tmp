    //- <!--[if IE 8]>
    //- script(src="./common/scripts/plugin/jquery.min.js" type="text/javascript" charset="UTF-8")
    //- <![endif]-->

    script(src="https://maps.googleapis.com/maps/api/js" type="text/javascript")
    script(src="./common/scripts/vendor.bundle.js" type="text/javascript" charset="UTF-8")
    script(src="./common/scripts/main.js" type="text/javascript")

  body
    #container
      include _header
      block main
      include _footer
